            }
          },
          "additionalProperties": true
        },
        "MouseKeyboard": {
          "type": "object",
          "properties": {
            "DisableMouseAcceleration": {
              "$ref": "#/$defs/TaskMode"
            },
            "DisableF1HelpPage": {
              "$ref": "#/$defs/TaskMode"
            },
            "DisableStickyShift": {
