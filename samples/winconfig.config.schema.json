            },
            "HideClipchamp": {
              "$ref": "#/$defs/TaskMode"
            },
            "HideEditWithPhotos": {
              "$ref": "#/$defs/TaskMode"
            },
            "HideEditWithPaint": {
              "$ref": "#/$defs/TaskMode"
            },
            "HideEditWithNotepad": {
              "$ref": "#/$defs/TaskMode"
            },
            "HideExtractAll": {
              "$ref": "#/$defs/TaskMode"
