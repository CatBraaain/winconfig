            },
            "HideStartMenuRecommendations": {
              "$ref": "#/$defs/TaskMode"
            },
            "HideStartMenuAccountNotifications": {
              "$ref": "#/$defs/TaskMode"
            },
            "EnableGodMode": {
              "$ref": "#/$defs/TaskMode"
            }
          },
          "additionalProperties": true
        },
        "Explorer": {
          "type": "object",
          "properties": {
            "ShowHiddenFiles": {
              "$ref": "#/$defs/TaskMode"
            },
            "ShowFileExtensions": {
              "$ref": "#/$defs/TaskMode"
            },
            "HideHome": {
              "$ref": "#/$defs/TaskMode"
            },
            "HideGallery": {
              "$ref": "#/$defs/TaskMode"
            },
            "DisableOneDrive": {
              "$ref": "#/$defs/TaskMode"
