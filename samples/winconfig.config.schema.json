            "DisableGroupView": {
              "$ref": "#/$defs/TaskMode"
            },
            "EnableRestoreLastSession": {
              "$ref": "#/$defs/TaskMode"
            },
            "DisableCheckBoxes": {
              "$ref": "#/$defs/TaskMode"
