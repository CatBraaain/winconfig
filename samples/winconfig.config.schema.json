            "TaskbarAlignmentLeft": {
              "$ref": "#/$defs/TaskMode"
            },
            "EnableTaskbarEndTask": {
              "$ref": "#/$defs/TaskMode"
            },
            "HideSearch": {
              "$ref": "#/$defs/TaskMode"
            },
            "HideTaskView": {
